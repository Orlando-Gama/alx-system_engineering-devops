#!/bin/bash

# Define paths
PID_FILE="/var/run/my_process.pid"
SCRIPT="./manage_my_process"

# Check if argument is provided
if [ $# -eq 0 ]; then
    echo "Usage: $0 {start|stop|restart}"
    exit 1
fi

# Function to start the process
start_process() {
    if [ -f "$PID_FILE" ]; then
        echo "Error: $SCRIPT is already running."
        exit 1
    else
        $SCRIPT &
        echo $! > $PID_FILE
        echo "$SCRIPT started"
    fi
}

# Function to stop the process
stop_process() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat $PID_FILE)
        sudo kill $PID
        rm $PID_FILE
        echo "$SCRIPT stopped"
    else
        echo "Error: $SCRIPT is not running."
        exit 1
    fi
}

# Function to restart the process
restart_process() {
    stop_process
    start_process
    echo "$SCRIPT restarted"
}

# Main script logic
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

